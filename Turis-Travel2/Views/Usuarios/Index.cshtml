@{
    ViewData["Title"] = "Panel de Usuario";
}

<div class="flex flex-col gap-6">
    <!-- Bienvenida -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h1 class="text-2xl font-bold text-green-800">¡Bienvenido, @User.Identity.Name!</h1>
        <p class="text-gray-600 mt-2">Este es tu panel de control donde puedes ver tus reservas y actualizar tu perfil.</p>
    </div>

    <!-- Estadísticas rápidas -->
    <div class="grid grid-cols-3 gap-4">
        <div class="bg-green-50 p-4 rounded-lg shadow text-center">
            <h2 class="text-lg font-semibold text-green-700">Reservas Activas</h2>
            <p class="text-2xl font-bold text-green-800 mt-2">3</p>
        </div>
        <div class="bg-green-50 p-4 rounded-lg shadow text-center">
            <h2 class="text-lg font-semibold text-green-700">Próximos Viajes</h2>
            <p class="text-2xl font-bold text-green-800 mt-2">1</p>
        </div>
        <div class="bg-green-50 p-4 rounded-lg shadow text-center">
            <h2 class="text-lg font-semibold text-green-700">Mensajes</h2>
            <p class="text-2xl font-bold text-green-800 mt-2">2</p>
        </div>
    </div>

    <!-- Lista de reservas -->
    <div class="bg-white p-6 rounded-xl shadow-md">
        <h2 class="text-xl font-bold text-green-800 mb-4">Tus Próximas Reservas</h2>

        <div class="grid grid-cols-1 gap-4">
            <div class="flex justify-between items-center bg-green-50 p-4 rounded-lg">
                <div>
                    <h3 class="font-semibold">Viaje a Santorini</h3>
                    <p class="text-gray-600">15 Oct – 22 Oct, 2025</p>
                </div>
                <a href="#" class="text-green-800 font-semibold hover:underline">Ver Detalles</a>
            </div>

            <div class="flex justify-between items-center bg-green-50 p-4 rounded-lg">
                <div>
                    <h3 class="font-semibold">Escapada a Roma</h3>
                    <p class="text-gray-600">05 Nov – 12 Nov, 2025</p>
                </div>
                <a href="#" class="text-green-800 font-semibold hover:underline">Ver Detalles</a>
            </div>
        </div>

        <p class="text-gray-500 mt-4">
            No tienes más reservas activas. <a href="#" class="text-green-700 font-semibold hover:underline">¡Busca tu próximo destino!</a>
        </p>
    </div>
</div>

