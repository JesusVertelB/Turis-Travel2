@{
    Layout = "~/Views/Usuarios/_LayoutUsuario.cshtml";
}

@{
    ViewData["Title"] = "Inicio del Usuario";
}

<div class="container">

    <!-- Bienvenida -->
    <div class="p-4 mb-4 rounded shadow-sm bg-white">
        <h2 class="fw-bold text-success">¡Bienvenido a tu panel, @User.Identity.Name!</h2>
        <p class="text-muted mt-2">
            Aquí encontrarás toda tu información personal, reservas y herramientas disponibles.
        </p>
    </div>

    <!-- Secciones rápidas -->
    <div class="row g-4">

        <!-- Mis Reservas -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h4 class="card-title text-success fw-bold">Mis Reservas</h4>
                    <p class="text-muted">Consulta el historial y estado de tus reservas activas.</p>
                    <a asp-controller="Usuarios" asp-action="ReservasUsuarios"
                       class="btn btn-success w-100">Ver Reservas</a>
                </div>
            </div>
        </div>

        <!-- Mi Perfil -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h4 class="card-title text-success fw-bold">Mi Perfil</h4>
                    <p class="text-muted">Edita tus datos personales y preferencias.</p>
                    <a asp-controller="Usuarios" asp-action="Perfil"
                       class="btn btn-success w-100">Editar Perfil</a>
                </div>
            </div>
        </div>

        <!-- Pagos -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h4 class="card-title text-success fw-bold">Pagos</h4>
                    <p class="text-muted">Revisa tus pagos y facturas pendientes.</p>
                    <a asp-controller="Clientes" asp-action="Pagos"
                       class="btn btn-success w-100">Ver Pagos</a>
                </div>
            </div>
        </div>

    </div>

    <!-- Banner inferior -->
    <div class="mt-5 p-4 bg-success bg-opacity-25 rounded shadow-sm text-center">
        <h4 class="fw-bold text-success mb-2">¿Listo para una nueva aventura?</h4>
        <p class="text-muted mb-3">Explora destinos y encuentra tu próximo viaje ideal.</p>
        <a href="#" class="btn btn-success btn-lg px-4">Buscar Destinos</a>
    </div>

</div>
