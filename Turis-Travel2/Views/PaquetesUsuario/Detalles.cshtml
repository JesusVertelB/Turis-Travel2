@model Turis_Travel2.Models.PaquetesTuristico
@{
    ViewData["Title"] = "Detalles del Paquete";
    Layout = "_LayoutUsuarios";
}
<!DOCTYPE html>

<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>ViajesIncreíbles - Detalles de Destino</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&amp;display=swap" rel="stylesheet" />
    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <!-- Theme Config -->
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#137fec",
                "background-light": "#f6f7f8",
                "background-dark": "#101922",
              },
              fontFamily: {
                "display": ["Plus Jakarta Sans", "sans-serif"]
              },
              borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
            },
          },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        /* Custom scrollbar for better aesthetics */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 font-display transition-colors duration-200">
    <!-- Top Navigation -->
   
    <!-- Main Content Container -->
    <main class="max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Hero Gallery Grid -->
        <section class="grid grid-cols-1 md:grid-cols-4 gap-4 h-[500px] mb-8 rounded-xl overflow-hidden">
            <!-- Main Large Image -->
            <div class="md:col-span-2 md:row-span-2 relative group cursor-pointer">
                <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                     style="background-image: url('@Model.ImagenUrl');">
                </div>

                <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-60"></div>
                <button class="absolute bottom-4 left-4 bg-white/90 dark:bg-slate-800/90 backdrop-blur px-4 py-2 rounded-lg text-sm font-bold shadow-lg flex items-center gap-2">
                    <span class="material-symbols-outlined text-[18px]">grid_view</span> Ver Galería
                </button>
            </div>
            <!-- Side Images -->
            <div class="hidden md:block relative group overflow-hidden">
                <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                     style="background-image: url('@Model.ImagenUrl');">
                </div>
            </div>

            <div class="hidden md:block relative group overflow-hidden">
                <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                     style="background-image: url('@Model.ImagenUrl');">
                </div>
            </div>

            <div class="hidden md:block relative group overflow-hidden">
                <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                     style="background-image: url('@Model.ImagenUrl');">
                </div>
            </div>

            <div class="hidden md:block relative group overflow-hidden">
                <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                     style="background-image: url('@Model.ImagenUrl');">
                </div>
            </div>

        </section>
        <!-- Two Column Layout: Content + Sticky Sidebar -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
            <!-- Left Column: Details -->
            <div class="lg:col-span-2 flex flex-col gap-10">
                <!-- Title & Highlights Header -->
                <header class="flex flex-col gap-6">

                    <!-- TÍTULO + ACCIONES -->
                    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">

                        <div>
                            <!-- ESTADO -->
                            @if (!string.IsNullOrEmpty(Model.Estado))
                            {
                                <span class="inline-block mb-2 bg-blue-100 text-blue-800 text-xs font-bold px-3 py-1 rounded uppercase">
                                    @Model.Estado
                                </span>
                            }

                            <!-- NOMBRE -->
                            <h1 class="text-3xl sm:text-4xl md:text-5xl font-black text-slate-900 leading-tight">
                                @Model.NombrePaquete
                            </h1>

                            <!-- DESCRIPCIÓN -->
                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <p class="mt-3 text-slate-500 max-w-3xl">
                                    @Model.Descripcion
                                </p>
                            }
                        </div>

                        <!-- BOTONES -->
                        <div class="flex gap-2">
                            <button class="p-2 rounded-full border border-slate-200 hover:bg-slate-100 text-slate-600">
                                <span class="material-symbols-outlined">share</span>
                            </button>
                            <button class="p-2 rounded-full border border-slate-200 hover:bg-slate-100 text-slate-600">
                                <span class="material-symbols-outlined">favorite</span>
                            </button>
                        </div>

                    </div>

                    <!-- BARRA DE INFO -->
                    <div class="flex flex-wrap gap-6 py-6 border-y border-slate-200">

                        <!-- PRECIO -->
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-green-50 rounded-lg text-green-600">
                                <span class="material-symbols-outlined">payments</span>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500 uppercase font-medium">Precio</p>
                                <p class="text-sm font-bold text-slate-900">
                                    $@Model.PrecioBase.ToString("N0")
                                </p>
                            </div>
                        </div>

                        <!-- DURACIÓN -->
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-blue-50 rounded-lg text-blue-600">
                                <span class="material-symbols-outlined">schedule</span>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500 uppercase font-medium">Duración</p>
                                <p class="text-sm font-bold text-slate-900">
                                    @{
                                        if (Model.FechaInicio.HasValue && Model.FechaFin.HasValue)
                                        {
                                            var dias = (
                                            Model.FechaFin.Value.ToDateTime(TimeOnly.MinValue)
                                            - Model.FechaInicio.Value.ToDateTime(TimeOnly.MinValue)
                                            ).Days;

                                            @($"{dias} días")
                                        }
                                        else
                                        {
                                            @("No definida")
                                        }
                                    }
                                </p>
                            </div>
                        </div>

                        <!-- FECHA INICIO -->
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-purple-50 rounded-lg text-purple-600">
                                <span class="material-symbols-outlined">event</span>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500 uppercase font-medium">Inicio</p>
                                <p class="text-sm font-bold text-slate-900">
                                    @(Model.FechaInicio?.ToString("dd/MM/yyyy") ?? "No definida")
                                </p>
                            </div>
                        </div>

                        <!-- CAPACIDAD -->
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-orange-50 rounded-lg text-orange-600">
                                <span class="material-symbols-outlined">group</span>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500 uppercase font-medium">Capacidad</p>
                                <p class="text-sm font-bold text-slate-900">
                                    @(Model.CapacidadMaxima.HasValue
                                                                        ? $"Máx. {Model.CapacidadMaxima}"
                                                                        : "No definida")
                                </p>
                            </div>
                        </div>

                    </div>

                </header>

                <!-- Overview Section -->
                <section class="mt-10">

                    <h2 class="text-xl font-bold text-slate-900 mb-4">
                        Descripción General
                    </h2>

                    <div class="prose prose-slate max-w-none text-slate-600 leading-relaxed">

                        @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
                        {
                            <p>@Model.Descripcion</p>
                        }
                        else
                        {
                            <p class="italic text-slate-400">
                                Este paquete turístico no tiene descripción.
                            </p>
                        }

                    </div>

                </section>

                <!-- Services Grid -->
                <section>
                    <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Servicios Incluidos</h2>
                    <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                        <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 shadow-sm">
                            <span class="material-symbols-outlined text-primary">wifi</span>
                            <span class="text-sm font-medium dark:text-slate-200">Wifi en Hoteles</span>
                        </div>
                        <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 shadow-sm">
                            <span class="material-symbols-outlined text-primary">restaurant</span>
                            <span class="text-sm font-medium dark:text-slate-200">Desayuno y Cena</span>
                        </div>
                        <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 shadow-sm">
                            <span class="material-symbols-outlined text-primary">directions_bus</span>
                            <span class="text-sm font-medium dark:text-slate-200">Traslados</span>
                        </div>
                        <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 shadow-sm">
                            <span class="material-symbols-outlined text-primary">person</span>
                            <span class="text-sm font-medium dark:text-slate-200">Guía Certificado</span>
                        </div>
                        <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 shadow-sm">
                            <span class="material-symbols-outlined text-primary">local_hospital</span>
                            <span class="text-sm font-medium dark:text-slate-200">Seguro Médico</span>
                        </div>
                        <div class="flex items-center gap-3 p-3 rounded-lg border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 shadow-sm">
                            <span class="material-symbols-outlined text-primary">confirmation_number</span>
                            <span class="text-sm font-medium dark:text-slate-200">Entradas Parque</span>
                        </div>
                    </div>
                </section>
                <!-- Itinerary Timeline -->
                <section>
                    <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Itinerario</h2>
                    <div class="relative border-l-2 border-slate-200 dark:border-slate-700 ml-3 space-y-8 pb-4">
                        <!-- Day 1 -->
                        <div class="relative pl-8">
                            <div class="absolute -left-[9px] top-0 size-4 bg-white dark:bg-slate-900 border-2 border-primary rounded-full"></div>
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">Día 1: Llegada a Puerto Natales</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Traslado al hotel y cena de bienvenida.</p>
                        </div>
                        <!-- Day 2 -->
                        <div class="relative pl-8">
                            <div class="absolute -left-[9px] top-0 size-4 bg-white dark:bg-slate-900 border-2 border-primary rounded-full"></div>
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">Día 2: Trekking Base Torres</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Caminata de 8 horas ida y vuelta para ver las famosas torres de granito.</p>
                            <div class="mt-3 bg-slate-100 dark:bg-slate-800 rounded-lg p-3 inline-block">
                                <span class="text-xs font-semibold text-slate-600 dark:text-slate-300 uppercase tracking-wide">Destacado</span>
                                <p class="text-sm text-slate-800 dark:text-slate-200">Vista panorámica al amanecer</p>
                            </div>
                        </div>
                        <!-- Day 3 -->
                        <div class="relative pl-8">
                            <div class="absolute -left-[9px] top-0 size-4 bg-white dark:bg-slate-900 border-2 border-primary rounded-full"></div>
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">Día 3: Navegación Glaciar Grey</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Excursión en barco acercándose a las paredes de hielo azul.</p>
                        </div>
                        <!-- More days toggle -->
                        <div class="relative pl-8 pt-2">
                            <button class="text-primary text-sm font-bold hover:underline flex items-center gap-1">
                                Ver itinerario completo <span class="material-symbols-outlined text-sm">expand_more</span>
                            </button>
                        </div>
                    </div>
                </section>
                <!-- Interactive Map -->
