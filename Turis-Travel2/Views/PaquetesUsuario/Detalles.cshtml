                    </div>
                </section>
            </div>
            <!-- Right Column: Sticky Sidebar -->
            

<aside class="relative">
    <div class="sticky top-24 flex flex-col gap-6">

        <!-- Booking Card -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-6 overflow-hidden">

            <!-- Precio -->
            <div class="flex flex-col gap-1 mb-6 border-b border-slate-100 dark:border-slate-700 pb-4">
                <p class="text-sm text-slate-500 dark:text-slate-400">Precio desde</p>

                <div class="flex items-baseline gap-1">
                    <span class="text-3xl font-black text-slate-900 dark:text-white tracking-tight">
                        $@Model.PrecioBase.ToString("N0")
                    </span>
                    <span class="text-slate-500 dark:text-slate-400 font-medium">/ persona</span>
                </div>

                @if (Model.Estado == "Activo")
                {
                    <div class="mt-2 inline-flex items-center gap-1 text-green-600 dark:text-green-400
                                bg-green-50 dark:bg-green-900/30 px-2 py-1 rounded text-xs font-bold w-fit">
                        <span class="material-symbols-outlined text-[14px]">check_circle</span>
                        Disponible
                    </div>
                }
            </div>

                        <form asp-controller="ReservasUsuario"
                              asp-action="Crear"
                              method="post"
                              class="flex flex-col gap-4">

                            <!-- ID del paquete -->
                            <input type="hidden" name="PaqueteId" value="@Model.IdPaquete" />

                            <!-- Fechas -->
                            <div class="flex flex-col gap-1.5">
                                <label class="text-xs font-bold uppercase text-slate-500 dark:text-slate-400 tracking-wide">
                                    Fechas
                                </label>
                                <input class="w-full pl-4 pr-4 py-2.5 bg-slate-50 dark:bg-slate-900
                                   border border-slate-200 dark:border-slate-600 rounded-lg text-sm
                                   text-slate-900 dark:text-white font-medium"
                                       readonly
                                       type="text"
                                       value="@Model.FechaInicio?.ToString("dd MMM") - @Model.FechaFin?.ToString("dd MMM yyyy")" />
                            </div>

                            <!-- Viajeros -->
                            <div class="flex flex-col gap-1.5">
                                <label class="text-xs font-bold uppercase text-slate-500 dark:text-slate-400 tracking-wide">
                                    Viajeros
                                </label>

                                <select name="NumeroPersonas"
                                        class="w-full pl-4 pr-4 py-2.5 bg-slate-50 dark:bg-slate-900
border border-slate-200 dark:border-slate-600 rounded-lg text-sm
text-slate-900 dark:text-white font-medium">
                                    @for (int i = 1; i <= Model.CapacidadMaxima; i++)
                                    {
                                        <option value="@i">@i persona@(i > 1 ? "s" : "")</option>
                                    }
                                </select>
                            </div>

                            <!-- Total -->
                            <div class="flex justify-between items-center py-2 mt-2 text-sm">
                                <span class="text-slate-600 dark:text-slate-300">Precio por persona</span>
                                <span class="font-bold text-slate-900 dark:text-white">
                                    $@Model.PrecioBase.ToString("N0")
                                </span>
                            </div>

                            <!-- BOTÓN (NO SE TOCA) -->
                            <button type="submit"
                                    class="w-full bg-primary hover:bg-blue-600 text-white font-bold py-3 px-4
rounded-lg shadow-md shadow-blue-500/20 transition-all
active:scale-[0.98] mt-2 flex justify-center items-center gap-2">
                                Reservar Ahora
                                <span class="material-symbols-outlined text-[20px]">arrow_forward</span>
                            </button>

                        </form>



            <div class="mt-4 text-center">
                <p class="text-xs text-slate-400">No se te cobrará nada todavía.</p>
            </div>
        </div>

        <!-- Help Card -->
        <div class="bg-blue-50 dark:bg-slate-800/50 rounded-xl p-4 flex items-start gap-3
                    border border-blue-100 dark:border-slate-700">
            <div class="p-1.5 bg-white dark:bg-slate-700 rounded-full text-primary shadow-sm">
                <span class="material-symbols-outlined text-[20px]">support_agent</span>
