@model Turis_Travel2.Models.Destino

@{
    ViewData["Title"] = "Crear Destino";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10">
    <div class="w-full max-w-3xl bg-white rounded-2xl shadow-lg p-8">

        <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">
            🌍 Crear nuevo destino
        </h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Nombre -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Nombre del destino
                </label>
                <input asp-for="Nombre"
                       class="w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" />
                <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
            </div>

            <!-- País y Categoría -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        País
                    </label>
                    <input asp-for="Pais"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        Categoría
                    </label>
                    <input asp-for="Categoria"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" />
                </div>
            </div>

            <!-- Precio -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Precio
                </label>
                <input asp-for="Precio" type="number" step="0.01"
                       class="w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" />
            </div>

            <!-- Descripción -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Descripción
                </label>
                <textarea asp-for="Descripcion" rows="4"
                          class="w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500"></textarea>
            </div>

            <!-- Imagen -->
            <div class="border-t pt-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    🖼 Imagen del destino
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Subir imagen
                        </label>
                        <input type="file" name="ImagenArchivo"
                               class="block w-full text-sm text-gray-600
                                      file:mr-4 file:py-2 file:px-4
                                      file:rounded-lg file:border-0
                                      file:bg-indigo-600 file:text-white
                                      hover:file:bg-indigo-700" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            O usar URL
                        </label>
                        <input type="text" name="ImagenUrl"
                               placeholder="https://ejemplo.com/imagen.jpg"
                               class="w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" />
                    </div>
                </div>
            </div>

            <!-- Botones -->
            <div class="flex justify-end gap-3 pt-6">
                <a asp-action="Index"
                   class="px-6 py-2 rounded-lg bg-gray-200 text-gray-700 hover:bg-gray-300 transition">
                    Cancelar
                </a>

                <button type="submit"
                        class="px-6 py-2 rounded-lg bg-indigo-600 text-white font-semibold hover:bg-indigo-700 transition">
                    Guardar destino
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
