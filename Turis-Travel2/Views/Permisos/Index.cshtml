@model IEnumerable<Turis_Travel2.Models.Scaffolded.Permiso>
@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Permisos";
}

<h2>Permisos por Rol</h2>

<div class="table-card">
    <form asp-action="GuardarPermisos" method="post">

        <table class="dashboard-table">
            <thead>
                <tr>
                    <th>Módulo</th>
                    <th>Permitir acceso</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ID_moduloNavigation.Nombre_modulo</td>
                        <td>
                            <input type="checkbox"
                                   name="permisosSeleccionados"
                                   value="@p.ID_permiso"
                                   @(p.Estado_permiso == 1 ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary mt-3">
            <i class="bi bi-save"></i> Guardar Cambios
        </button>

    </form>
</div>
