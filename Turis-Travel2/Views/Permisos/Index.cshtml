@model IEnumerable<Turis_Travel2.Models.Permiso>

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Permisos";
}

<div class="max-w-4xl bg-white rounded-xl shadow p-6">

    <h2 class="text-lg font-semibold text-gray-800 mb-6">
        Permisos de Acceso
    </h2>

    <form asp-action="GuardarPermisos" method="post">

        <div class="space-y-4">
            @foreach (var p in Model)
            {
                <div class="flex justify-between items-center border rounded-lg p-4">

                    <div>
                        <p class="font-medium text-gray-700">
                            @p.IdModuloNavigation.NombreModulo
                        </p>
                        <p class="text-sm text-gray-500">
                            @p.IdModuloNavigation.Descripcion
                        </p>
                    </div>

                    <input type="checkbox"
                           name="permisosSeleccionados"
                           value="@p.IdPermiso"
                           class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500"
                           @(p.EstadoPermiso == 1 ? "checked" : "") />
                </div>
            }
        </div>

        <div class="flex justify-end mt-6">
            <button type="submit"
                    class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                Guardar Cambios
            </button>
        </div>

    </form>
</div>
