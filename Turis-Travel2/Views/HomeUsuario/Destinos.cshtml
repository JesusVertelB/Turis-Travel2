@model IEnumerable<Turis_Travel2.Models.Destino>

@{
    Layout = "_LayoutUsuarios";
}

<main class="container mx-auto px-6 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <!-- SIDEBAR -->
        <aside class="lg:col-span-1">
            <div class="bg-white rounded-xl border border-gray-300 p-6 shadow-sm sticky top-24">

                <h2 class="text-xl font-bold text-gray-800 mb-1">Filtrar Destinos</h2>
                <p class="text-sm text-gray-500 mb-6">Encuentra tu viaje perfecto</p>

                <!-- Región -->
                <div class="border-t pt-4">
                    <h3 class="font-semibold text-gray-700 mb-3">Región</h3>
                    <label class="flex items-center gap-2 mb-2">
                        <input type="checkbox" class="accent-blue-600">
                        <span class="text-gray-600">Europa</span>
                    </label>
                    <label class="flex items-center gap-2 mb-2">
                        <input type="checkbox" class="accent-blue-600">
                        <span class="text-gray-600">Asia</span>
                    </label>
                    <label class="flex items-center gap-2">
                        <input type="checkbox" class="accent-blue-600">
                        <span class="text-gray-600">Sudamérica</span>
                    </label>
                </div>

                <!-- Estilo -->
                <div class="border-t pt-4 mt-4">
                    <h3 class="font-semibold text-gray-700 mb-3">Estilo de viaje</h3>
                    <label class="flex items-center gap-2 mb-2">
                        <input type="checkbox" checked class="accent-blue-600">
                        <span class="text-gray-600">Aventura</span>
                    </label>
                    <label class="flex items-center gap-2 mb-2">
                        <input type="checkbox" class="accent-blue-600">
                        <span class="text-gray-600">Relajación</span>
                    </label>
                    <label class="flex items-center gap-2 mb-2">
                        <input type="checkbox" class="accent-blue-600">
                        <span class="text-gray-600">Cultural</span>
                    </label>
                    <label class="flex items-center gap-2">
                        <input type="checkbox" class="accent-blue-600">
                        <span class="text-gray-600">Familiar</span>
                    </label>
                </div>

                <!-- Botones -->
                <div class="mt-6 space-y-2">
                    <button class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition">
                        Aplicar filtros
                    </button>
                    <button class="w-full border border-gray-300 text-gray-600 py-2 rounded-lg hover:bg-gray-100 transition">
                        Borrar todo
                    </button>
                </div>
            </div>
        </aside>

        <!-- CONTENIDO -->
        <section class="lg:col-span-3">

            <!-- HEADER -->
            <div class="flex flex-col sm:flex-row items-center justify-between mb-8 gap-4">
                <h1 class="text-3xl font-bold text-gray-800">
                    Explora nuestros destinos
                </h1>

                <div class="flex items-center gap-3">
                    <select class="border border-gray-300 rounded-lg px-4 py-2 text-gray-600">
                        <option>Popularidad</option>
                        <option>Precio (menor a mayor)</option>
                    </select>

                    <div class="flex border border-gray-300 rounded-lg overflow-hidden">
                        <button class="px-3 py-2 bg-blue-600 text-white">
                            <span class="material-symbols-outlined">grid_view</span>
                        </button>
                        <button class="px-3 py-2 text-gray-600 hover:bg-gray-100">
                            <span class="material-symbols-outlined">view_list</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- GRID DESTINOS -->
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                @foreach (var destino in Model)
                {
                    <div class="bg-white rounded-xl border border-gray-300 shadow-sm hover:shadow-md transition overflow-hidden">
                        <img src="@destino.ImagenUrl"
                             alt="@destino.Descripcion"
                             class="h-56 w-full object-cover">

                        <div class="p-5">
                            <div class="flex justify-between items-center mb-2">
                                <h3 class="text-lg font-bold text-gray-800">
                                    @destino.Nombre
                                </h3>
                                <span class="text-xs font-semibold bg-blue-100 text-blue-600 px-2 py-1 rounded-full">
                                    @destino.Categoria
                                </span>
                            </div>

                            <p class="text-sm text-gray-500 mb-4">
                                Atardeceres icónicos, impresionantes vistas y experiencias únicas.
                            </p>

                            <div class="flex justify-between items-center">
                                <span class="font-bold text-gray-800">
                                    $@destino.Precio
                                </span>
                                <a href="#" class="text-blue-600 font-semibold hover:underline">
                                    Ver detalles
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- PAGINACIÓN -->
            <div class="mt-10 flex justify-center">
                <nav>
                    <ul class="flex gap-2">
                        <li>
                            <a class="px-3 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100"
                               href="@Url.Action("Destinos", new { page = ViewBag.Page - 1 })">
                                «
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li>
                                <a class="px-3 py-2 rounded-lg border
                                       @(ViewBag.Page == i ? "bg-blue-600 text-white border-blue-600" : "border-gray-300 text-gray-600 hover:bg-gray-100")"
                                   href="@Url.Action("Destinos", new { page = i })">
                                    @i
                                </a>
                            </li>
                        }

                        <li>
                            <a class="px-3 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100"
                               href="@Url.Action("Destinos", new { page = ViewBag.Page + 1 })">
                                »
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

        </section>
    </div>
</main>
