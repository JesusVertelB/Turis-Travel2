@model IEnumerable<Turis_Travel2.Models.Itinerario>

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Gestión de Itinerarios";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
<link rel="stylesheet" href="/css/Itinerario.css" />

<div class="main-container">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
        <div>
            <h1 class="page-title">Gestión de Itinerarios</h1>
            <p class="page-subtitle">Administra los itinerarios disponibles para los paquetes turísticos.</p>
        </div>

        <!-- ✅ MODIFICADO -->
        <a asp-controller="Itinerarios"
           asp-action="Crear"
           class="btn btn-primary-custom">
            <span class="material-symbols-outlined">add_circle</span>
            Nuevo Itinerario
        </a>
    </div>

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card blue">
                <div class="stat-label">Total Itinerarios</div>
                <p class="stat-value">@Model.Count()</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card green">
                <div class="stat-label">Activos</div>
                <p class="stat-value">@Model.Count(x => x.Estado == "Activo")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card gray">
                <div class="stat-label">Inactivos</div>
                <p class="stat-value">@Model.Count(x => x.Estado != "Activo")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card purple">
                <div class="stat-label">Días Promedio</div>
                <p class="stat-value">
                    @(Model.Any() ? Math.Round(Model.Average(x => x.DuracionDias ?? 0), 0) : 0)
                </p>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="table-container">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Itinerario</th>
                    <th>Paquete</th>
                    <th>Duración</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>

            <tbody id="tableBody">
                @foreach (var i in Model)
                {
                    <tr data-nombre="@i.NombreItinerario?.ToLower()"
                        data-paquete="@(i.IdPaqueteNavigation?.NombrePaquete?.ToLower() ?? "")"
                        data-tipo="@i.TipoItinerario?.ToLower()"
                        data-estado="@i.Estado"
                        data-duracion="@i.DuracionDias">

                        <td>@i.NombreItinerario</td>
                        <td>@(i.IdPaqueteNavigation?.NombrePaquete ?? "Sin asignar")</td>
                        <td>@i.DuracionDias días</td>
                        <td>$@i.PrecioPorPersona?.ToString("N0")</td>
                        <td>
                            <span class="badge-status @(i.Estado == "Activo" ? "activo" : "inactivo")">
                                @i.Estado
                            </span>
                        </td>

                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-2">

                                <!-- ✅ VER -->
                                <a asp-controller="Itinerarios"
                                   asp-action="Detalle"
                                   asp-route-id="@i.IdItinerario"
                                   class="btn-action btn-view">
                                    <span class="material-symbols-outlined">visibility</span>
                                </a>

                                <!-- ✅ EDITAR -->
                                <a asp-controller="Itinerarios"
                                   asp-action="Editar"
                                   asp-route-id="@i.IdItinerario"
                                   class="btn-action btn-edit">
                                    <span class="material-symbols-outlined">edit</span>
                                </a>

                                <!-- ✅ ELIMINAR -->
                                <a asp-controller="Itinerarios"
                                   asp-action="Eliminar"
                                   asp-route-id="@i.IdItinerario"
                                   class="btn-action btn-delete"
                                   onclick="return confirm('¿Eliminar este itinerario?')">
                                    <span class="material-symbols-outlined">delete</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="empty-state">
                <span class="material-symbols-outlined">inbox</span>
                <p>No hay itinerarios registrados</p>

                <a asp-controller="Itinerarios"
                   asp-action="Crear">
                    Crear el primer itinerario
                </a>
            </div>
        }
    </div>
</div>
