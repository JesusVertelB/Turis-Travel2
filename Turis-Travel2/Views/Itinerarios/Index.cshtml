@model IEnumerable<Turis_Travel2.Models.Itinerario>

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Gestión de Itinerarios";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
<link rel="stylesheet" href="/css/Itinerario.css" />

<div class="main-container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
        <div>
            <h1 class="page-title">Gestión de Itinerarios</h1>
            <p class="page-subtitle">Administra los itinerarios disponibles para los paquetes turísticos.</p>
        </div>

        <a asp-action="Crear" class="btn btn-primary-custom" aria-label="Crear nuevo itinerario">
            <span class="material-symbols-outlined" style="font-size: 20px; vertical-align: middle;">add_circle</span>
            Nuevo Itinerario
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card blue">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Total Itinerarios</div>
                        <p class="stat-value">@Model.Count()</p>
                    </div>
                    <span class="material-symbols-outlined stat-icon">map</span>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="stat-card green">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Activos</div>
                        <p class="stat-value">@Model.Count(x => x.Estado == "Activo")</p>
                    </div>
                    <span class="material-symbols-outlined stat-icon">check_circle</span>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="stat-card gray">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Inactivos</div>
                        <p class="stat-value">@Model.Count(x => x.Estado != "Activo")</p>
                    </div>
                    <span class="material-symbols-outlined stat-icon">pause_circle</span>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="stat-card purple">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Días Promedio</div>
                        <p class="stat-value">@(Model.Any() ? Math.Round(Model.Average(x => x.DuracionDias ?? 0), 0) : 0)</p>
                    </div>
                    <span class="material-symbols-outlined stat-icon">schedule</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filter-section">
        <div class="row g-3">
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <span class="material-symbols-outlined text-muted">search</span>
                    </span>
                    <input type="text" class="form-control border-start-0" id="searchInput"
                           placeholder="Buscar por nombre, paquete o tipo...">
                    <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                        <span class="material-symbols-outlined">close</span>
                    </button>
                </div>
            </div>

            <div class="col-xl-2 col-lg-3 col-md-3">
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <span class="material-symbols-outlined text-muted">filter_list</span>
                    </span>
                    <select class="form-select" id="filterEstado">
                        <option value="">Todos</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                </div>
            </div>

            <div class="col-xl-2 col-lg-3 col-md-3">
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <span class="material-symbols-outlined text-muted">schedule</span>
                    </span>
                    <select class="form-select" id="filterDuracion">
                        <option value="">Duración</option>
                        <option value="1-3">1-3 días</option>
                        <option value="4-7">4-7 días</option>
                        <option value="8+">8+ días</option>
                    </select>
                </div>
            </div>

            <div class="col-xl-4 col-lg-6 col-md-6 d-flex justify-content-end align-items-end">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="showInactive" checked>
                    <label class="form-check-label" for="showInactive">Mostrar inactivos</label>
                </div>
                <button class="btn btn-outline-secondary ms-3" id="resetFilters">
                    <span class="material-symbols-outlined">refresh</span>
                    Limpiar
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="table-container">
        <div class="table-responsive-lg">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="d-none d-lg-table-cell">#</th>
                        <th>Itinerario</th>
                        <th class="d-none d-md-table-cell">Paquete</th>
                        <th class="d-none d-sm-table-cell">Duración</th>
                        <th class="d-none d-lg-table-cell">Periodo</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody id="tableBody">
                    @if (Model.Any())
                    {
                        @foreach (var i in Model)
                        {
                            <tr data-nombre="@i.NombreItinerario?.ToLower()"
                                data-paquete="@(i.IdPaqueteNavigation?.NombrePaquete?.ToLower() ?? "")"
                                data-tipo="@i.TipoItinerario?.ToLower()"
                                data-estado="@i.Estado"
                                data-duracion="@i.DuracionDias">

                                <td>
                                    <div class="itinerario-box">
                                        <div class="itinerario-icon">
                                            <span class="material-symbols-outlined">route</span>
                                        </div>
                                        <div>
                                            <div class="itinerario-name">@i.NombreItinerario</div>
                                            <div class="itinerario-type">
                                                <span class="material-symbols-outlined" style="font-size: 14px;">category</span>
                                                @i.TipoItinerario
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <span style="color: #475569; font-size: 14px;">@(i.IdPaqueteNavigation?.NombrePaquete ?? "Sin asignar")</span>
                                </td>

                                <td>
                                    <span class="badge-duration">
                                        <span class="material-symbols-outlined" style="font-size: 16px;">schedule</span>
                                        @i.DuracionDias días
                                    </span>
                                </td>

                                <td>
                                    @if (i.FechaInicio != null && i.FechaFin != null)
                                    {
                                        <div class="date-info">
                                            <div class="date-row">
                                                <span class="material-symbols-outlined">flight_takeoff</span>
                                                @i.FechaInicio.Value.ToString("dd/MM/yyyy")
                                            </div>
                                            <div class="date-row">
                                                <span class="material-symbols-outlined">flight_land</span>
                                                @i.FechaFin.Value.ToString("dd/MM/yyyy")
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="color: #94a3b8; font-size: 13px;">Sin fechas</span>
                                    }
                                </td>

                                <td>
                                    @if (i.PrecioPorPersona != null)
                                    {
                                        <div>
                                            <div class="price-value">
                                                <span class="material-symbols-outlined">payments</span>
                                                $@i.PrecioPorPersona.Value.ToString("N0")
                                            </div>
                                            <div class="price-label">por persona</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="color: #94a3b8; font-size: 13px;">No definido</span>
                                    }
                                </td>

                                <td>
                                    <span class="badge-status @(i.Estado == "Activo" ? "activo" : "inactivo")">
                                        <span class="status-dot @(i.Estado == "Activo" ? "activo" : "inactivo")"></span>
                                        @i.Estado
                                    </span>
                                </td>

                                <td>
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Detalle" asp-route-id="@i.IdItinerario" class="btn-action btn-view" title="Ver detalles" aria-label="Ver detalles del itinerario @i.NombreItinerario">
                                            <span class="material-symbols-outlined" style="font-size: 18px;">visibility</span>
                                        </a>

                                        <a asp-action="Editar" asp-route-id="@i.IdItinerario" class="btn-action btn-edit" title="Editar">
                                            <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                        </a>

                                        <a asp-action="Eliminar" asp-route-id="@i.IdItinerario" class="btn-action btn-delete" title="Eliminar"
                                           onclick="return confirm('¿Estás seguro de eliminar este itinerario?')">
                                            <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <!-- Añade paginación -->
            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                <div class="text-muted small">
                    Mostrando <span id="showingCount">@Model.Count()</span> de @Model.Count() registros
                </div>
                <nav aria-label="Paginación">
                    <ul class="pagination mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                    </ul>
                </nav>
            </div>
        </div>

            @if (!Model.Any())
            {
                <div class="empty-state">
                    <span class="material-symbols-outlined">inbox</span>
                    <p>No hay itinerarios registrados</p>
                    <a asp-action="Crear">Crear el primer itinerario</a>
                </div>
            }
        </div>
    </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const filterEstado = document.getElementById('filterEstado');
        const filterDuracion = document.getElementById('filterDuracion');
        const clearSearch = document.getElementById('clearSearch');
        const resetFilters = document.getElementById('resetFilters');
        const showInactive = document.getElementById('showInactive');
        const tableRows = document.querySelectorAll('#tableBody tr');
        const showingCount = document.getElementById('showingCount');

        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase();
            const estadoFilter = filterEstado.value;
            const duracionFilter = filterDuracion.value;
            const showInactiveValue = showInactive.checked;

            let visibleCount = 0;

            tableRows.forEach(row => {
                const nombre = row.dataset.nombre || '';
                const paquete = row.dataset.paquete || '';
                const tipo = row.dataset.tipo || '';
                const estado = row.dataset.estado || '';
                const duracion = parseInt(row.dataset.duracion) || 0;

                const matchesSearch = !searchTerm ||
                                     nombre.includes(searchTerm) ||
                                     paquete.includes(searchTerm) ||
                                     tipo.includes(searchTerm);

                const matchesEstado = !estadoFilter || estado === estadoFilter;

                let matchesDuracion = true;
                if (duracionFilter === '1-3') {
                    matchesDuracion = duracion >= 1 && duracion <= 3;
                } else if (duracionFilter === '4-7') {
                    matchesDuracion = duracion >= 4 && duracion <= 7;
                } else if (duracionFilter === '8+') {
                    matchesDuracion = duracion >= 8;
                }

                const matchesInactive = showInactiveValue || estado === 'Activo';

                if (matchesSearch && matchesEstado && matchesDuracion && matchesInactive) {
                    row.style.display = '';
                    visibleCount++;
                    row.classList.remove('d-none');
                } else {
                    row.style.display = 'none';
                    row.classList.add('d-none');
                }
            });

            showingCount.textContent = visibleCount;

            // Mostrar mensaje si no hay resultados
            const emptyState = document.querySelector('.empty-state');
            if (visibleCount === 0 && tableRows.length > 0) {
                if (!emptyState) {
                    const table = document.querySelector('.table');
                    const newEmptyState = document.createElement('div');
                    newEmptyState.className = 'empty-state';
                    newEmptyState.innerHTML = `
                        <span class="material-symbols-outlined">search_off</span>
                        <p>No se encontraron itinerarios con los filtros aplicados</p>
                        <button class="btn btn-outline-primary" id="clearFiltersBtn">Limpiar filtros</button>
                    `;
                    table.parentNode.appendChild(newEmptyState);

                    document.getElementById('clearFiltersBtn').addEventListener('click', resetAllFilters);
                }
            } else if (emptyState) {
                emptyState.remove();
            }
        }

        function resetAllFilters() {
            searchInput.value = '';
            filterEstado.value = '';
            filterDuracion.value = '';
            showInactive.checked = true;
            filterTable();
        }

        // Event Listeners
        searchInput.addEventListener('input', debounce(filterTable, 300));
        filterEstado.addEventListener('change', filterTable);
        filterDuracion.addEventListener('change', filterTable);
        clearSearch.addEventListener('click', () => {
            searchInput.value = '';
            filterTable();
        });
        resetFilters.addEventListener('click', resetAllFilters);
        showInactive.addEventListener('change', filterTable);

        // Función debounce para mejor performance
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Inicializar
        filterTable();
    });
</script>