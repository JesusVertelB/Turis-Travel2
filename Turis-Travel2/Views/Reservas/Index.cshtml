@model IEnumerable<Turis_Travel2.Models.Scaffolded.Reserva>
@using System.Linq

@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_LayoutReservas.cshtml";
}

<div class="container-fluid px-4">

    <!-- Tarjeta superior -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <h5 class="fw-semibold m-0">
                <i class="bi bi-card-checklist me-2 text-primary"></i>
                Lista de Reservas
            </h5>

            <a asp-action="Create" class="btn btn-primary btn-sm px-3">
                <i class="bi bi-plus-circle me-1"></i>
                Nueva Reserva
            </a>

        </div>
    </div>

    <!-- Tabla -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center py-4">
                    <i class="bi bi-info-circle fs-4 d-block mb-2"></i>
                    No hay reservas registradas por el momento.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Cliente</th>
                                <th>Paquete</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID_reserva</td>

                                    <td>@item.ID_clienteNavigation?.Nombre</td>

                                    <td>@item.ID_paqueteNavigation?.Nombre_paquete</td>

                                    <td>@item.Fecha_solicitud?.ToString("yyyy-MM-dd")</td>

                                    <td>
                                        @{
                                            var estado = item.Estado?.ToLower();
                                            string color = estado switch
                                            {
                                                "pendiente" => "warning",
                                                "confirmada" => "success",
                                                "cancelada" => "danger",
                                                _ => "secondary"
                                            };
                                        }

                                        <span class="badge bg-@color text-capitalize px-3 py-2">
                                            @item.Estado
                                        </span>
                                    </td>

                                    <td class="text-center">

                                        <a asp-action="Edit" asp-route-id="@item.ID_reserva"
                                           class="btn btn-warning btn-sm me-1 px-3">
                                            <i class="bi bi-pencil-square"></i>
                                            Editar
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.ID_reserva"
                                           class="btn btn-danger btn-sm px-3">
                                            <i class="bi bi-trash3"></i>
                                            Eliminar
                                        </a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>

</div>

@section Scripts {
    <style>
        /* Hover suave */
        .table-hover tbody tr:hover {
            background-color: #f8f9fd !important;
        }

        td, th {
            padding-top: 14px !important;
            padding-bottom: 14px !important;
        }

        .badge {
            font-size: 0.78rem !important;
        }

        .btn-sm {
            font-size: 0.80rem;
        }
    </style>
}
