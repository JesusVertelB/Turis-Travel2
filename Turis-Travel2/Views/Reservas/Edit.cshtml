@model Turis_Travel2.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
    Layout = "~/Views/Shared/_LayoutReservas.cshtml";
}

<div class="container-fluid px-4">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="fw-semibold m-0">
                <i class="bi bi-pencil-square text-warning me-2"></i>
                Editar Reserva
            </h5>
        </div>

        <div class="card-body">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="IdReserva" />

                <div class="row">

                    <!-- CLIENTE -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Cliente</label>
                        <select asp-for="IdCliente"
                                class="form-select"
                                asp-items="@(ViewData["IdCliente"] as SelectList)">
                        </select>
                    </div>

                    <!-- PAQUETE -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Paquete</label>
                        <select asp-for="IdPaquete"
                                class="form-select"
                                asp-items="@(ViewData["IdPaquete"] as SelectList)">
                        </select>
                    </div>

                    <!-- ITINERARIO -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Itinerario</label>
                        <select asp-for="IdItinerario"
                                class="form-select"
                                asp-items="@(ViewData["IdItinerario"] as SelectList)">
                        </select>
                    </div>

                    <!-- TRANSPORTE -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Transporte</label>
                        <select asp-for="IdTransporte"
                                class="form-select"
                                asp-items="@(ViewData["IdTransporte"] as SelectList)">
                        </select>
                    </div>

                    <!-- ESTADO -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="pendiente">Pendiente</option>
                            <option value="confirmada">Confirmada</option>
                            <option value="cancelada">Cancelada</option>
                        </select>
                    </div>

                    <!-- PASAJEROS -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Número de pasajeros</label>
                        <input asp-for="NumeroPasajeros"
                               type="number"
                               min="1"
                               class="form-control" />
                    </div>

                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2 px-4">
                        Cancelar
                    </a>

                    <button type="submit" class="btn btn-warning px-4">
                        <i class="bi bi-save me-1"></i>
                        Guardar Cambios
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
