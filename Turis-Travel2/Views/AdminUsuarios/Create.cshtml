@model Turis_Travel2.Models.Usuario
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-4">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Inicio</a></li>
            <li class="breadcrumb-item"><a href="/AdminUsuarios">Gestión de Usuarios</a></li>
            <li class="breadcrumb-item active">Crear Usuario</li>
        </ol>
    </nav>

    <div class="card shadow-sm p-4">
        <h3 class="fw-bold mb-3">Registrar Nuevo Usuario</h3>
        <p class="text-muted">Completa los campos para añadir un nuevo usuario al sistema</p>

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label class="form-label">Nombre de Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" required />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input asp-for="Correo" class="form-control" type="email" required />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" type="password" required />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Rol</label>
                <select asp-for="IdRol" asp-items="ViewBag.Roles" class="form-select" required></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-secondary" href="/AdminUsuarios">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> Crear Usuario
            </button>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
