@model Turis_Travel2.Models.Scaffolded.Usuario
@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container">
    <h2 class="mb-4">Detalles del Usuario</h2>

    <div class="card p-4 shadow-sm">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.ID_usuario</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre_usuario</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Correo</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@Model.ID_rolNavigation?.Nombre_rol</dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary">Volver</a>
        <a asp-action="Edit" asp-route-id="@Model.ID_usuario" class="btn btn-primary">Editar</a>
    </div>
</div>
