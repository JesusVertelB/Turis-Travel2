@model Turis_Travel2.Models.Usuario
@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-person-lines-fill"></i> Detalles del Usuario</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">ID:</div>
                <div class="col-sm-9">@Model.IdUsuario</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Nombre:</div>
                <div class="col-sm-9">@Model.NombreUsuario</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Correo:</div>
                <div class="col-sm-9">@Model.Correo</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Rol:</div>
                <div class="col-sm-9">@Model.IdRolNavigation?.NombreRol</div>
            </div>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
                <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">
                    <i class="bi bi-pencil-fill"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>
