@model Turis_Travel2.Models.Scaffolded.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h4>
        </div>
        <div class="card-body">
            <p>¿Estás seguro de que deseas eliminar al siguiente usuario?</p>
            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Nombre:</strong> @Model.Nombre_usuario</li>
                <li class="list-group-item"><strong>Correo:</strong> @Model.Correo</li>
                <li class="list-group-item"><strong>Rol:</strong> @Model.ID_rolNavigation?.Nombre_rol</li>
            </ul>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ID_usuario" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash-fill"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
