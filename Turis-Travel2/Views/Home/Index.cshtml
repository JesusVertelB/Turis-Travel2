@using System.Security.Claims

@{
    var userIdentity = User.Identity as ClaimsIdentity;
    ViewData["Title"] = "Home Page";
}


<!-- Banner principal - FULL WIDTH -->
<div class="hero-wrapper">
    <div class="hero-container">
        <img src="/img/Guatape-al-fondo.jpg" class="hero-img" />

        <div class="hero-content">
            <h1>Tu Próxima Aventura Comienza Aquí</h1>
            <p>Busca, descubre y reserva tu próximo viaje inolvidable con nosotros.</p>

            <!-- Barra de búsqueda -->
            <div class="search-bar shadow">
                <div class="search-input">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="Buscar destino..." />
                </div>

                <div class="search-date">
                    <i class="bi bi-calendar"></i>
                    <input type="date" />
                </div>

                <button class="btn-explorar">Explorar</button>
            </div>
        </div>
    </div>
</div>

<!-- Ofertas destacadas -->
<section class="section">
    <h3 class="section-title">Ofertas Destacadas para Ti</h3>

    <div class="cards-container">

        <div class="card">
            <img src="/img/costa-rica.jpg" />
            <h4>Riviera Maya Todo Incluido</h4>
            <p>Desde $1,250</p>
            <a href="#" class="btn-oferta">Ver Oferta →</a>
        </div>

        <div class="card">
            <img src="/img/roma.jpg" />
            <h4>Escapada a Roma</h4>
            <p>Desde $870</p>
            <a href="#" class="btn-oferta">Ver Oferta →</a>
        </div>

        <div class="card">
            <img src="/img/images.jpeg" />
            <h4>Aventura en Costa Rica</h4>
            <p>Desde $1,100</p>
            <a href="#" class="btn-oferta">Ver Oferta →</a>
        </div>

        <div class="card">
            <img src="/img/Guatape-al-fondo.jpg" />
            <h4>Explora Kioto</h4>
            <p>Desde $1,800</p>
            <a href="#" class="btn-oferta">Ver Oferta →</a>
        </div>

    </div>
</section>

@if (User.Identity.IsAuthenticated)
{
    <section class="section">
        <h3 class="section-title">Tus Próximas Reservas</h3>

        <div class="booking-card">
            <img src="/img/costa-rica.jpg" />
            <div>
                <h4>Viaje a Santorini</h4>
                <p>15 Oct – 22 Oct, 2024</p>
            </div>
            <a href="#" class="btn-detalle">Ver Detalles</a>
        </div>

        <div class="booking-card">
            <img src="/img/roma.jpg" />
            <div>
                <h4>Aventura en Cusco</h4>
                <p>05 Nov – 12 Nov, 2024</p>
            </div>
            <a href="#" class="btn-detalle">Ver Detalles</a>
        </div>

        <p class="empty-message">
            No tienes más reservas activas. <a href="#">¡Busca tu próximo destino!</a>
        </p>
    </section>
}

