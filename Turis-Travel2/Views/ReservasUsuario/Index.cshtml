@model Turis_Travel2.Models.ReservasUsuarioViewModel
@{
    Layout = "_LayoutUsuarios";
}

<section class="max-w-[1200px] mx-auto px-6 py-10">

    <!-- HEADER -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div>
            <h1 class="text-3xl font-black text-[#111418]">Mis Reservas</h1>
            <p class="text-[#617289]">Gestiona tus próximas aventuras y revisa tu historial.</p>
        </div>
        <a href="#" class="inline-flex items-center gap-2 bg-primary text-white px-5 py-3 rounded-xl font-bold hover:bg-primary/90">
            + Nueva Reserva
        </a>
    </div>

    <!-- RESUMEN -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <div class="bg-white p-6 rounded-xl border">
            <p class="text-sm text-gray-500">Viajes próximos</p>
            <p class="text-3xl font-bold">3</p>
        </div>
        <div class="bg-white p-6 rounded-xl border">
            <p class="text-sm text-gray-500">Millas totales</p>
            <p class="text-3xl font-bold">14,250</p>
        </div>
        <div class="bg-white p-6 rounded-xl border">
            <p class="text-sm text-gray-500">Completados</p>
            <p class="text-3xl font-bold">8</p>
        </div>
    </div>

    <!-- LISTA DE RESERVAS -->
    <div class="space-y-6">

        <!-- RESERVA -->
        <div class="bg-white rounded-xl border p-6 flex flex-col md:flex-row gap-6">
            <div class="w-full md:w-1/3 h-40 bg-gray-200 rounded-lg"></div>
            <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                    <span class="text-xs font-bold text-green-600 bg-green-100 px-2 py-1 rounded-full">CONFIRMADO</span>
                    <span class="text-xs text-gray-400">#R-45821</span>
                </div>
                <h3 class="text-xl font-bold">París, Francia</h3>
                <p class="text-sm text-gray-500">12 Oct – 22 Oct, 2023 · 2 Adultos</p>
            </div>
            <div class="flex flex-col justify-between items-end">
                <p class="text-xl font-bold">$1,200.00</p>
                <div class="flex gap-2">
                    <button class="px-4 py-2 rounded-lg border">Gestionar</button>
                    <button class="px-4 py-2 rounded-lg bg-primary text-white">Ver detalles</button>
                </div>
            </div>
        </div>

        <!-- RESERVA -->
        <div class="bg-white rounded-xl border p-6 flex flex-col md:flex-row gap-6">
            <div class="w-full md:w-1/3 h-40 bg-gray-200 rounded-lg"></div>
            <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                    <span class="text-xs font-bold text-yellow-600 bg-yellow-100 px-2 py-1 rounded-full">PENDIENTE DE PAGO</span>
                    <span class="text-xs text-gray-400">#R-45890</span>
                </div>
                <h3 class="text-xl font-bold">Tokio, Japón</h3>
                <p class="text-sm text-gray-500">05 Nov – 15 Nov, 2023 · 1 Adulto</p>
            </div>
            <div class="flex flex-col justify-between items-end">
                <p class="text-xl font-bold">$2,450.00</p>
                <div class="flex gap-2">
                    <button class="px-4 py-2 rounded-lg bg-yellow-500 text-white">Pagar ahora</button>
                    <button class="px-4 py-2 rounded-lg border">Ver detalles</button>
                </div>
            </div>
        </div>

        <!-- RESERVA -->
        <div class="bg-white rounded-xl border p-6 flex flex-col md:flex-row gap-6">
            <div class="w-full md:w-1/3 h-40 bg-gray-200 rounded-lg"></div>
            <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                    <span class="text-xs font-bold text-green-600 bg-green-100 px-2 py-1 rounded-full">CONFIRMADO</span>
                    <span class="text-xs text-gray-400">#R-45910</span>
                </div>
                <h3 class="text-xl font-bold">Cancún, México</h3>
                <p class="text-sm text-gray-500">20 Dic – 27 Dic, 2023 · 2 Adultos</p>
            </div>
            <div class="flex flex-col justify-between items-end">
                <p class="text-xl font-bold">$900.00</p>
                <div class="flex gap-2">
                    <button class="px-4 py-2 rounded-lg border">Gestionar</button>
                    <button class="px-4 py-2 rounded-lg bg-primary text-white">Ver detalles</button>
                </div>
            </div>
        </div>

    </div>

</section>
