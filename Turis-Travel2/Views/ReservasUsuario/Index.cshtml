@model Turis_Travel2.Models.ReservasUsuarioViewModel
@{
    Layout = "_LayoutUsuarios";
}

<section class="max-w-6xl mx-auto px-6 py-10">

    <!-- HEADER -->
    <div class="mb-10">
        <h1 class="text-4xl font-black text-slate-900">
            Mis Reservas
        </h1>
        <p class="text-slate-500 mt-1">
            Bienvenido, <span class="font-semibold">@Model.Nombre</span>
        </p>
    </div>

    <!-- RESUMEN -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white rounded-2xl border p-6 shadow-sm">
            <p class="text-sm text-slate-500">Viajes próximos</p>
            <p class="text-4xl font-extrabold text-slate-900">@Model.ViajesProximos</p>
        </div>

        <div class="bg-white rounded-2xl border p-6 shadow-sm">
            <p class="text-sm text-slate-500">Millas totales</p>
            <p class="text-4xl font-extrabold text-slate-900">@Model.MillasTotales</p>
        </div>

        <div class="bg-white rounded-2xl border p-6 shadow-sm">
            <p class="text-sm text-slate-500">Completados</p>
            <p class="text-4xl font-extrabold text-slate-900">@Model.ViajesCompletados</p>
        </div>
    </div>

    <!-- LISTA DE RESERVAS -->
    <div class="space-y-6">

        @if (!Model.Reservas.Any())
        {
            <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6 text-center">
                <p class="text-yellow-700 font-medium">
                    No tienes reservas registradas.
                </p>
            </div>
        }
        else
        {
            @foreach (var reserva in Model.Reservas)
            {
                <div class="bg-white rounded-2xl border p-6 shadow-sm
                                    flex flex-col md:flex-row md:items-center gap-6">

                    <!-- INFO -->
                    <div class="flex-1">
                        <span class="inline-block text-xs font-bold px-3 py-1 rounded-full
                                    @(reserva.Estado == "Confirmado"
                                                              ? "bg-green-100 text-green-700"
                                                              : "bg-yellow-100 text-yellow-700")">
                            @reserva.Estado
                        </span>

                        <h3 class="text-2xl font-bold text-slate-900 mt-3">
                            @reserva.Destino
                        </h3>

                        <p class="text-sm text-slate-500 mt-1">
                            @reserva.Fecha
                        </p>
                    </div>

                    <!-- ACCIONES -->
                    <div class="flex flex-col items-end gap-3 min-w-[180px]">

                        <p class="text-2xl font-extrabold text-slate-900">
                            $@reserva.Precio.ToString("N0")
                        </p>

                        @if (reserva.Estado == "Pendiente")
                        {
                            <a asp-controller="Pagos"
                               asp-action="Crear"
                               asp-route-idReserva="@reserva.IdReserva"
                               class="w-full text-center px-5 py-2.5 rounded-xl
                      bg-blue-600 text-white font-semibold
                      hover:bg-blue-700 transition">
                                💳 Pagar ahora
                            </a>

                        }
                        else
                        {
                            <span class="text-green-600 font-semibold">
                                ✔ Reserva pagada
                            </span>
                        }

                        <a asp-controller="ReservasUsuario"
                           asp-action="Detalles"
                           asp-route-id="@reserva.IdReserva"
                           class="w-full text-center px-5 py-2.5 rounded-xl
                                          border border-slate-300 text-slate-700
                                          hover:bg-slate-100 transition">
                            Ver detalles
                        </a>
                    </div>

                </div>
            }
        }

    </div>

</section>
