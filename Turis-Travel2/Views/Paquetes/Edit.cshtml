@model Turis_Travel2.Models.PaquetesTuristico

@{
    ViewData["Title"] = "Editar Paquete";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Inicio</a></li>
            <li class="breadcrumb-item"><a href="/Paquetes">Gestión de Paquetes</a></li>
            <li class="breadcrumb-item active">Editar Paquete</li>
        </ol>
    </nav>

    <div class="card shadow-sm p-4">
        <h3 class="fw-bold mb-3">Editar Paquete</h3>
        <p class="text-muted">Edita los campos para modificar el paquete turístico</p>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- ID oculto -->
            <input type="hidden" asp-for="IdPaquete" />

            <!-- NOMBRE Y PRECIO -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NombrePaquete" class="form-label">Nombre del paquete turístico</label>
                    <input asp-for="NombrePaquete" class="form-control" required />
                    <span asp-validation-for="NombrePaquete" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PrecioBase" class="form-label">Precio base</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="PrecioBase" class="form-control" type="number" min="0" step="0.01" required />
                    </div>
                    <span asp-validation-for="PrecioBase" class="text-danger"></span>
                </div>
            </div>

            <!-- FECHAS -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Fecha de inicio</label>
                    <input type="date" name="FechaInicioString" class="form-control" value="@ViewBag.FechaInicioString" required />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Fecha de fin</label>
                    <input type="date" name="FechaFinString" class="form-control" value="@ViewBag.FechaFinString" required />
                </div>
            </div>

            <!-- CAPACIDAD Y ESTADO -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CapacidadMaxima" class="form-label">Capacidad máxima</label>
                    <input asp-for="CapacidadMaxima" class="form-control" type="number" min="1" />
                    <span asp-validation-for="CapacidadMaxima" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select" required>
                        <option value="">Seleccione un estado</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <!-- DESCRIPCIÓN -->
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- IMAGEN: URL o SUBIDA -->
            <div class="mb-3">
                <label class="form-label">URL de imagen (opcional)</label>
                <input type="url" name="ImagenUrl" class="form-control" placeholder="https://..." value="@Model.ImagenUrl" />
                <small class="text-muted">Si pegas un enlace, se usará esta imagen.</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Subir imagen (opcional)</label>
                <input type="file" name="ImagenArchivo" class="form-control" accept="image/*" />
                <small class="text-muted">Si subes una imagen, reemplazará la existente o la URL.</small>
            </div>

            <!-- BOTONES -->
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-secondary" href="/Paquetes">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validación: fin > inicio
            var form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                var inicio = new Date(document.querySelector('[name="FechaInicioString"]').value);
                var fin = new Date(document.querySelector('[name="FechaFinString"]').value);
                if (inicio >= fin) {
                    e.preventDefault();
                    alert('La fecha de fin debe ser posterior a la fecha de inicio');
                    return false;
                }
            });
        });
    </script>
}
