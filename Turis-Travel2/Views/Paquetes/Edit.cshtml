@model Turis_Travel2.Models.Scaffolded.Paquetes_Turistico;

@{
    ViewData["Title"] = "Editar Paquete";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Inicio</a></li>
            <li class="breadcrumb-item"><a href="/Paquetes">Gestión de Paquetes</a></li>
            <li class="breadcrumb-item active">Editar Paquete</li>
        </ol>
    </nav>

    <div class="card shadow-sm p-4">
        <h3 class="fw-bold mb-3">Editar Paquete</h3>
        <p class="text-muted">Edita los campos para modificar el paquete turístico</p>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <!-- Campo oculto para el ID -->
            <input type="hidden" asp-for="ID_paquete" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre_paquete" class="form-label">Nombre del paquete turístico</label>
                    <input asp-for="Nombre_paquete" class="form-control" required />
                    <span asp-validation-for="Nombre_paquete" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Precio_base" class="form-label">Precio base</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Precio_base" class="form-control" type="number" min="0" step="0.01" required />
                    </div>
                    <span asp-validation-for="Precio_base" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Fecha_inicio" class="form-label">Fecha de inicio</label>
                    <input asp-for="Fecha_inicio" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="Fecha_inicio" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Fecha_fin" class="form-label">Fecha de fin</label>
                    <input asp-for="Fecha_fin" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="Fecha_fin" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Capacidad_maxima" class="form-label">Capacidad máxima</label>
                    <input asp-for="Capacidad_maxima" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Capacidad_maxima" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select" required>
                        <option value="">Seleccione un estado</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-secondary" href="/Paquetes">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>

                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Guardar cambios
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Formatear fechas para datetime-local
        document.addEventListener('DOMContentLoaded', function() {
            // Formatear Fecha_inicio
            var fechaInicio = document.getElementById('Fecha_inicio');
            if (fechaInicio && fechaInicio.value) {
                var fecha = new Date(fechaInicio.value);
                fechaInicio.value = fecha.toISOString().slice(0, 16);
            }

            // Formatear Fecha_fin
            var fechaFin = document.getElementById('Fecha_fin');
            if (fechaFin && fechaFin.value) {
                var fecha = new Date(fechaFin.value);
                fechaFin.value = fecha.toISOString().slice(0, 16);
            }

            // Validación de fechas
            var form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                var inicio = new Date(document.getElementById('Fecha_inicio').value);
                var fin = new Date(document.getElementById('Fecha_fin').value);

                if (inicio >= fin) {
                    e.preventDefault();
                    alert('La fecha de fin debe ser posterior a la fecha de inicio');
                    return false;
                }
            });
        });
    </script>
}