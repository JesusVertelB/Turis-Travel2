@{
    ViewData["Title"] = "Registro";
}

<!-- TAILWIND -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center bg-gray-100">

    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8">

        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
            Crear Cuenta
        </h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }


        <form asp-action="Register" method="post" class="space-y-5">
            @Html.AntiForgeryToken()


            <!-- NOMBRE -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Nombre completo
                </label>
                <input type="text"
                       name="NombreUsuario"
                       required
                       class="w-full rounded-lg border border-gray-300 px-4 py-2
                              focus:outline-none focus:ring-2 focus:ring-[#007AA2]
                              focus:border-[#007AA2]" />
            </div>

            <!-- CORREO -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Correo electrónico
                </label>
                <input type="email"
                       name="Correo"
                       required
                       class="w-full rounded-lg border border-gray-300 px-4 py-2
                              focus:outline-none focus:ring-2 focus:ring-[#007AA2]
                              focus:border-[#007AA2]" />
            </div>

            <!-- CONTRASEÑA -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Contraseña
                </label>
                <input type="password"
                       name="Contrasena"
                       required
                       class="w-full rounded-lg border border-gray-300 px-4 py-2
                              focus:outline-none focus:ring-2 focus:ring-[#007AA2]
                              focus:border-[#007AA2]" />
            </div>

            <!-- BOTÓN -->
            <button type="submit"
                    class="w-full bg-[#007AA2] text-white py-2 rounded-lg
                           font-semibold hover:bg-[#006488] transition">
                Registrarme
            </button>
        </form>

        <!-- VOLVER A LOGIN -->
        <p class="text-center text-sm text-gray-600 mt-6">
            ¿Ya tienes cuenta?
            <a asp-action="Login"
               class="text-[#007AA2] font-semibold hover:underline">
                Inicia sesión
            </a>
        </p>

    </div>

</div>
