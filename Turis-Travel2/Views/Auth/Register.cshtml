@model Turis_Travel2.Models.Scaffolded.Usuario
@{
    ViewData["Title"] = "Registro";
}

<!-- ESTILOS COMPLETOS (Bootstrap + personalizados) -->
<style>
    /* ===============================
           TARJETA GENERAL DEL FORMULARIO
           =============================== */
    .register-card {
        width: 100%;
        max-width: 420px;
        border-radius: 20px;
        border: none;
    }

    .bg-register {
        background-color: #f5f7fa !important;
    }

    /* ===============================
           INPUTS Y VALIDACIONES
           =============================== */
    .form-control:focus {
        border-color: #007AA2;
        box-shadow: 0 0 0 0.2rem rgba(0, 122, 162, 0.25);
    }

    .text-danger {
        font-size: 0.85rem;
    }

    /* ===============================
           BOTONES
           =============================== */
    .custom-btn {
        background-color: #007AA2;
        border-color: #007AA2;
    }

        .custom-btn:hover {
            background-color: #006488;
            border-color: #006488;
        }

    a.text-primary:hover {
        text-decoration: underline !important;
    }
</style>



<!-- FORMULARIO DE REGISTRO -->
<div class="d-flex align-items-center justify-content-center bg-register min-vh-100">
    <div class="card shadow-lg p-4 register-card">

        <h2 class="text-center mb-4 fw-bold text-dark">Crear cuenta</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Register" method="post">

            <div class="mb-3">
                <label asp-for="Nombre_usuario" class="form-label">Nombre de usuario</label>
                <input asp-for="Nombre_usuario" class="form-control" />
                <span asp-validation-for="Nombre_usuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label">Correo electrónico</label>
                <input asp-for="Correo" type="email" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold custom-btn">
                Registrarse
            </button>
        </form>

        <p class="text-center mt-4">
            ¿Ya tienes cuenta?
            <a asp-action="Login" class="text-primary fw-semibold text-decoration-none">
                Inicia sesión
            </a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

