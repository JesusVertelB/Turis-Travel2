@using System.Security.Claims

@{
    var userIdentity = User.Identity as ClaimsIdentity;
    var rol = userIdentity?.FindFirst(ClaimTypes.Role)?.Value;
    var nombre = userIdentity?.FindFirst(ClaimTypes.Name)?.Value;
    var idUsuario = userIdentity?.FindFirst("IdUsuario")?.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turis Travel</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Turis_Travel2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=plane_contrails" />
</head>
<body>
    <header class="p-5 m-0 w-full flex bg-white rounded-xl shadow-xl justify-between">
        <div class="flex flex items-center">
            <span class="material-symbols-outlined text-2xl text-cyan-60 ">
                plane_contrails
            </span>
            <h1 class="text-2xl font-bold ">Turis Travel</h1>
        </div>
        <nav class="flex gap-5 text-bold text-lg  text-gray-500">
            <a class="leading-normal">Inicio</a>
            <a>Destinos</a>
            <a>Mis Reservas</a>
            <a>Contacto</a>
        </nav>

        <div>
            @if (User.Identity.IsAuthenticated)
            {

                if (rol == "Usuario")
                {
                    <a asp-controller="Clientes" asp-action="Index" class="bg-[#007AA2] text-white px-4 py-2 rounded-xl hover:bg-blue-600 transition">Mi perfil</a>
                }
                else
                {
                    <a asp-controller="Dashboard" asp-action="Index" class="bg-[#007AA2] text-white px-4 py-2 rounded-xl hover:bg-blue-600 transition">Dashboard</a>
                }
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login" class="bg-[#007AA2] text-white px-4 py-2 rounded-xl hover:bg-blue-600 transition">Iniciar Sesión</a>
            }


        </div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Turis_Travel2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
