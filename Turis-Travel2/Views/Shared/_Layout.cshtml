@using System.Security.Claims

@{
    var userIdentity = User.Identity as ClaimsIdentity;
    var rol = userIdentity?.FindFirst(ClaimTypes.Role)?.Value;
    var nombre = userIdentity?.FindFirst(ClaimTypes.Name)?.Value;
    var idUsuario = userIdentity?.FindFirst("IdUsuario")?.Value;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Turis Travel</title>

    <!-- TAILWIND -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- ICONOS GOOGLE -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    <!-- TU CSS -->
    <link rel="stylesheet" href="~/css/estilos.css" />
</head>
<body class="bg-gray-100">

    <!-- NAVBAR TAILWIND -->
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto flex items-center justify-between py-4 px-4">

            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index"
               class="flex items-center gap-2">
                <span class="material-symbols-outlined text-blue-600 text-3xl">
                    travel
                </span>
                <span class="text-xl font-bold text-gray-700">Turis Travel</span>
            </a>

            <!-- Menu Desktop -->
            <ul class="hidden md:flex gap-6 text-gray-700 font-medium">
                <li><a asp-controller="Home" asp-action="Index" class="hover:text-blue-600">Inicio</a></li>
                <li><a href="#" class="hover:text-blue-600">Destinos</a></li>
                <li><a asp-controller="Contacto" asp-action="Index" class="hover:text-blue-600">Contacto</a></li>
            </ul>

            <!-- Botones derecha -->
            <div class="hidden md:flex items-center gap-3">

                @if (User.Identity.IsAuthenticated)
                {
                    if (rol == "Usuario")
                    {
                        <a asp-controller="Usuarios" asp-action="Index"
                           class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                            Mi Perfil
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Dashboard" asp-action="Index"
                           class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                            Dashboard
                        </a>
                    }

                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit"
                                class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                            Cerrar Sesión
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login"
                       class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                        Iniciar Sesión
                    </a>
                }
            </div>

            <!-- Mobile Button -->
            <button id="mobile-btn" class="md:hidden material-symbols-outlined text-3xl">
                menu
            </button>

        </nav>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
            <ul class="flex flex-col text-gray-700 font-medium">

                <li><a asp-controller="Home" asp-action="Index" class="py-3 px-4 hover:bg-gray-100">Inicio</a></li>
                <li><a href="#" class="py-3 px-4 hover:bg-gray-100">Destinos</a></li>
                <li><a asp-controller="Contacto" asp-action="Index" class="py-3 px-4 hover:bg-gray-100">Contacto</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        @if (rol == "Usuario")
                        {
                            <a asp-controller="Usuarios" asp-action="Index"
                               class="py-3 px-4 hover:bg-gray-100">Mi Perfil</a>
                        }
                        else
                        {
                            <a asp-controller="Dashboard" asp-action="Index"
                               class="py-3 px-4 hover:bg-gray-100">Dashboard</a>
                        }
                    </li>

                    <li>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="px-4 py-3">
                            <button type="submit" class="text-red-600 font-semibold">
                                Cerrar Sesión
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a asp-controller="Auth" asp-action="Login" class="py-3 px-4 hover:bg-gray-100">Iniciar Sesión</a></li>
                }

            </ul>
        </div>
    </header>

    <!-- CONTENIDO -->
    <main class="container mx-auto py-6 px-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t py-4 text-center text-gray-500">
        © 2025 - Turis_Travel2 |
        <a class="text-blue-600 hover:underline" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>


    <script>
        // Toggle menú responsive
        const btn = document.getElementById("mobile-btn");
        const menu = document.getElementById("mobile-menu");

        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

