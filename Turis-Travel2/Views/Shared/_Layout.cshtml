@using System.Security.Claims

@{
    var userIdentity = User.Identity as ClaimsIdentity;
    var rol = userIdentity?.FindFirst(ClaimTypes.Role)?.Value;
    var nombre = userIdentity?.FindFirst(ClaimTypes.Name)?.Value;
    var idUsuario = userIdentity?.FindFirst("IdUsuario")?.Value;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turis Travel</title>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- ICONOS GOOGLE -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    <!-- TU CSS -->
    <link rel="stylesheet" href="~/css/estilos.css" />

</head>
<body>

    <!-- NAVBAR -->
    <header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <span class="material-symbols-outlined text-primary me-2">
                    plane_contrails
                </span>
                <strong>Turis Travel</strong>
            </a>

            <!-- Botón responsive -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto me-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Destinos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contacto" asp-action="Index">Contacto</a>
                    </li>
                </ul>

                <!-- Parte derecha (Botones Login o Perfil) -->
                <div class="d-flex align-items-center gap-2">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (rol == "Usuario")
                        {
                            <a asp-controller="Usuarios" asp-action="Index"
                               class="btn btn-primary">
                                Mi perfil
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Dashboard" asp-action="Index"
                               class="btn btn-primary">
                                Dashboard
                            </a>
                        }

                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-danger">
                                Cerrar sesión
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login"
                           class="btn btn-primary">
                            Iniciar Sesión
                        </a>
                    }

                </div>

            </div>
        </div>
    </header>

    <!-- Contenido -->
    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-light border-top py-3 text-center text-muted">
        &copy; 2025 - Turis_Travel2 |
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

