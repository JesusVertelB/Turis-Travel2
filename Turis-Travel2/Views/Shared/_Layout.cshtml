@using System.Security.Claims

@{
    var userIdentity = User.Identity as ClaimsIdentity;
    var rol = userIdentity?.FindFirst(ClaimTypes.Role)?.Value;
    var nombre = userIdentity?.FindFirst(ClaimTypes.Name)?.Value;
    var idUsuario = userIdentity?.FindFirst("IdUsuario")?.Value;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Turis Travel</title>

    <!-- TAILWIND -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/output.css" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet" 
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />



    <!-- ICONOS GOOGLE -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    <!-- TU CSS -->
    <link rel="stylesheet" href="~/css/estilos.css" />
</head>
<body class="bg-gray-100">

    <!-- NAVBAR TAILWIND -->
    <header id="navbar" class="relative w-full bg-white shadow-sm transition-all">

        <nav class="container mx-auto flex items-center justify-between py-4 px-4">

            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index"
               class="flex items-center gap-2">
                <span class="material-symbols-outlined text-blue-600 text-3xl">
                    travel
                </span>
                <span class="text-2xl font-extrabold tracking-tight text-gray-800">
                    Turis<span class="text-blue-600">Travel</span>
                </span>

            </a>

            <!-- Menu Desktop -->
            <ul class="hidden md:flex gap-8 text-gray-800 font-semibold tracking-wide">
                <li><a asp-controller="Home" asp-action="Index" class="hover:text-blue-600">Inicio</a></li>
                <li><a href="#" class="hover:text-blue-600">Destinos</a></li>
                <li><a asp-controller="Contacto" asp-action="Index" class="hover:text-blue-600">Contacto</a></li>
            </>

            <!-- Botones derecha -->
            <div class="hidden md:flex items-center gap-3">

                @if (User.Identity.IsAuthenticated)
                {
                    if (rol == "Usuario")
                    {
                        <a asp-controller="Usuarios" asp-action="Index"
                           class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                            Mi Perfil
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Dashboard" asp-action="Index"
                           class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                            Dashboard
                        </a>
                    }

                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit"
                                class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                            Cerrar Sesión
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login"
                       class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                        Iniciar Sesión
                    </a>
                }
            </div>

            <!-- Mobile Button -->
            <button id="mobile-btn" class="md:hidden material-symbols-outlined text-3xl">
                menu
            </button>

        </nav>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
            <ul class="flex flex-col text-gray-700 font-medium">

                <li><a asp-controller="Home" asp-action="Index" class="py-3 px-4 hover:bg-gray-100">Inicio</a></li>
                <li><a href="#" class="py-3 px-4 hover:bg-gray-100">Destinos</a></li>
                <li><a asp-controller="Contacto" asp-action="Index" class="py-3 px-4 hover:bg-gray-100">Contacto</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        @if (rol == "Usuario")
                        {
                            <a asp-controller="Usuarios" asp-action="Index"
                               class="py-3 px-4 hover:bg-gray-100">Mi Perfil</a>
                        }
                        else
                        {
                            <a asp-controller="Dashboard" asp-action="Index"
                               class="py-3 px-4 hover:bg-gray-100">Dashboard</a>
                        }
                    </li>

                    <li>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="px-4 py-3">
                            <button type="submit" class="text-red-600 font-semibold">
                                Cerrar Sesión
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a asp-controller="Auth" asp-action="Login" class="py-3 px-4 hover:bg-gray-100">Iniciar Sesión</a></li>
                }

            </ul>
        </div>
    </header>

    <!-- CONTENIDO -->
    <main class="pt-24">
    <div class="container mx-auto px-4">
        @RenderBody()
    </div>
</main>


    <!-- FOOTER -->
    <footer class="bg-surface-light dark:bg-surface-dark border-t border-gray-200 dark:border-gray-800 pt-16 pb-8">
        <div class="max-w-[1200px] mx-auto px-4 md:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
                <div class="col-span-1 md:col-span-1">
                    <div class="flex items-center gap-2 mb-4">
                        <span class="material-symbols-outlined text-primary text-3xl">travel_explore</span>
                        <h2 class="text-text-main dark:text-white text-xl font-bold">ViajesGlobal</h2>
                    </div>
                    <p class="text-text-muted dark:text-gray-400 text-sm leading-relaxed">
                        Hacemos realidad tus sueños de viaje con los mejores paquetes y destinos del mundo.
                    </p>
                </div>
                <div>
                    <h4 class="text-text-main dark:text-white font-bold mb-4">Compañía</h4>
                    <ul class="flex flex-col gap-2 text-sm text-text-muted dark:text-gray-400">
                        <li><a class="hover:text-primary transition-colors" href="#">Sobre Nosotros</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Carreras</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Prensa</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Blog</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-text-main dark:text-white font-bold mb-4">Soporte</h4>
