@using System.Security.Claims

@{
    var user = User.Identity as ClaimsIdentity;
    var nombreUsuario = user?.FindFirst(ClaimTypes.Name)?.Value ?? "Usuario";
    var correoUsuario = user?.FindFirst(ClaimTypes.Email)?.Value ?? "correo@ejemplo.com";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Turis Travel</title>

    <!-- TAILWIND -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- ICONOS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    <style>
        body {
            background: #f7f9fb;
        }
    </style>
</head>

<body class="min-h-screen bg-[#f7f9fb]">

    <!-- NAVBAR -->
    <header class="w-full bg-white shadow-sm py-4 px-10 flex items-center justify-between">

        <!-- LOGO -->
        <div class="flex items-center gap-2">
            <span class="material-symbols-outlined text-blue-600 text-3xl">
                travel_explore
            </span>
            <span class="text-2xl font-bold text-gray-800">Turis Travel</span>
        </div>

        <!-- MENÚ CENTRAL -->
        <nav class="hidden md:flex items-center gap-10 text-gray-600 font-medium">

            <a asp-controller="Home" asp-action="Index" class="hover:text-blue-600 transition">
                Inicio
            </a>

            <a asp-controller="Destinos" asp-action="Index" class="hover:text-blue-600 transition">
                Destinos
            </a>

            <a asp-controller="ReservasUsuario"asp-action="Index"class="nav-link">
                Mis Reservas
            </a>



            <!-- 🔥 CORREGIDO: ahora sí va al controlador Contacto -->
            <a asp-controller="Contacto" asp-action="Index" class="hover:text-blue-600 transition">
                Contacto
            </a>

        </nav>

        <!-- USUARIO -->
        <div class="relative">
            <button id="userMenuBtn"
                    class="w-10 h-10 bg-orange-300 text-white rounded-full flex items-center justify-center font-bold">
                @nombreUsuario.Substring(0, 1).ToUpper()
            </button>

            <!-- DROPDOWN -->
            <div id="userMenu"
                 class="hidden absolute right-0 mt-3 w-56 bg-white shadow-xl rounded-xl p-3 z-50">

                <div class="text-center font-bold">@nombreUsuario</div>
                <div class="text-center text-gray-500 text-sm mb-2">@correoUsuario</div>

                <hr class="my-2" />

                <a asp-controller="Usuarios" asp-action="Miperfil"
                   class="block px-3 py-2 hover:bg-gray-100 rounded-lg cursor-pointer">
                    <span class="material-symbols-outlined text-gray-600 text-md mr-1">
                        account_circle
                    </span>
                    Mi Perfil
                </a>

                <form asp-controller="Auth" asp-action="Logout" method="post">
                    <button class="w-full text-left px-3 py-2 hover:bg-gray-100 rounded-lg text-red-600">
                        <span class="material-symbols-outlined text-md mr-1">
                            logout
                        </span>
                        Cerrar sesión
                    </button>
                </form>

            </div>
        </div>

    </header>

    <!-- CONTENIDO -->
    <main class="px-12 py-10">
        @RenderBody()
    </main>

    <!-- JS PARA DROPDOWN -->
    <script>
        const btn = document.getElementById("userMenuBtn");
        const menu = document.getElementById("userMenu");

        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });

        // Cerrar si se hace click fuera
        document.addEventListener("click", function (e) {
            if (!btn.contains(e.target) && !menu.contains(e.target)) {
                menu.classList.add("hidden");
            }
        });
    </script>

</body>
</html>

