@using System.Security.Claims

@{
    var nombre = User.FindFirstValue(ClaimTypes.Name);
    var correo = User.FindFirstValue(ClaimTypes.Email);
    var rol = User.FindFirstValue(ClaimTypes.Role);
    var iniciales = !string.IsNullOrEmpty(nombre)
       ? (nombre.Split(' ').Length > 1
           ? $"{nombre.Split(' ')[0][0]}{nombre.Split(' ')[1][0]}"
           : nombre.Substring(0, Math.Min(2, nombre.Length))).ToUpper()
       : "AD";
}

@* Layout del Dashboard — Turis Travel *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Turis-Travel - Dashboard</title>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- ICONOS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    <!-- CSS PROPIO DEL DASHBOARD -->
    <link rel="stylesheet" href="~/css/Dashboard.css" />
    <link rel="stylesheet" href="~/css/output.css" />
</head>

<body>
    <div class="dashboard-container">

        <!-- SIDEBAR -->
        <aside class="sidebar shadow-sm">

            <!-- LOGO / TITULO -->
            <div class="sidebar-header">
                <h3 class="sidebar-title">Turis Travel</h3>
                <span class="sidebar-subtitle">Panel Administrativo</span>
            </div>

            <!-- MENU -->
            <ul class="sidebar-menu">

                <!-- DASHBOARD -->
                <li class="menu-section">General</li>
                <li>
                    <a asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <!-- GESTIÓN -->
                    <li class="menu-section">Gestión</li>

                    <li>
                        <a asp-controller="AdminUsuarios" asp-action="Index">
                            <i class="bi bi-people"></i>
                            <span>Usuarios</span>
                        </a>
                    </li>

                }

                <!-- OPERACIÓN -->
                <li class="menu-section">Operación</li>

                <li>
                    <a asp-controller="Reservas" asp-action="Index">
                        <i class="bi bi-calendar-check"></i>
                        <span>Reservas</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Paquetes" asp-action="Index">
                        <i class="bi bi-bag-check"></i>
                        <span>Paquetes</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Itinerarios" asp-action="Index">
                        <i class="bi bi-map"></i>
                        <span>Itinerarios</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Destinos" asp-action="Index">
                        <i class="bi bi-geo-alt"></i>
                        <span>Destinos</span>
                    </a>
                </li>

                <!-- SISTEMA -->
                @if (User.IsInRole("Admin"))
                {
                    <!-- SISTEMA -->
                    <li class="menu-section">Sistema</li>

                    <li class="submenu">
                        <a href="#" class="submenu-toggle">
                            <i class="bi bi-gear"></i>
                            <span>Configuración</span>
                            <i class="bi bi-chevron-down ms-auto"></i>
                        </a>

                        <ul class="submenu-items">
                            <li>
                                <a asp-controller="Roles" asp-action="Index">
                                    <i class="bi bi-shield-lock"></i>
                                    <span>Roles</span>
                                </a>
                            </li>

                            <li>
                                <a asp-controller="Permisos" asp-action="Index">
                                    <i class="bi bi-key"></i>
                                    <span>Permisos</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }


            </ul>

            <!-- PERFIL -->
            <div class="sidebar-footer">
                <div class="profile-box">
                    <div class="profile-avatar">@iniciales</div>

                    <div class="profile-info">
                        <span class="profile-name">@nombre</span>
                        <span class="profile-role">@rol</span>
                    </div>
                </div>

                <form asp-controller="Auth" asp-action="Logout" method="post">
                    <button class="logout-btn" type="submit">
                        <i class="bi bi-box-arrow-right"></i>
                        Cerrar sesión
                    </button>
                </form>
            </div>

        </aside>


        <!-- CONTENIDO PRINCIPAL -->
        <main class="main-content">
            @RenderBody()
        </main>

    </div>

    <!-- CHART JS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- SCRIPTS DEL PROYECTO -->
    @RenderSection("Scripts", required: false)
    <script>
            document.querySelectorAll('.submenu-toggle').forEach(toggle => {
            toggle.addEventListener('click', e => {
                e.preventDefault();
                toggle.parentElement.classList.toggle('open');
            });
        });
    </script>
</body>
</html>
