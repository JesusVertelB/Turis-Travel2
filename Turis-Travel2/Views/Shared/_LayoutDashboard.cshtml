@using System.Security.Claims

@{
    var nombre = User.FindFirstValue(ClaimTypes.Name);
    var correo = User.FindFirstValue(ClaimTypes.Email);
    var rol = User.FindFirstValue(ClaimTypes.Role);
}

@* Layout del Dashboard — Turis Travel *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Turis-Travel - Dashboard</title>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- ICONOS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- CSS PROPIO DEL DASHBOARD -->
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>

<body>
    <div class="dashboard-container">

        <!-- SIDEBAR -->
        <aside class="sidebar shadow-sm">
            <div class="sidebar-header">
                <h3 class="sidebar-title">Agencia de Viajes</h3>
            </div>

            <ul class="sidebar-menu">
                <li>
                    <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li><a asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                    <li><a asp-controller="Reservas" asp-action="Index">Reservas</a></li>
                    <li><a asp-controller="Destinos" asp-action="Index">Destinos</a></li>
                    <li><a asp-controller="Informes" asp-action="Index">Informes</a></li>
                }
            </ul>

            <div class="sidebar-footer text-center">
                <div class="profile-img d-flex align-items-center justify-content-center mx-auto"
                     style="width: 70px; height: 70px; border-radius: 50%; background: #e9ecef;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38"
                         fill="#6c757d" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        <path fill-rule="evenodd"
                              d="M8 9a5 5 0 0 0-5 5 .5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5
                                 5 5 0 0 0-5-5z" />
                    </svg>
                </div>

                <div class="mt-2">
                    <p class="profile-name fw-bold">@nombre</p>
                    <p class="profile-email text-muted">@correo</p>
                    <span class="badge bg-primary">@rol</span>
                </div>
            </div>

            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button id="ButtonLogout" type="submit">Cerrar Sesión</button>
            </form>
        </aside>

        <!-- CONTENIDO PRINCIPAL -->
        <main class="main-content">
            @RenderBody()
        </main>

    </div>

    <!-- CHART JS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- SCRIPTS DEL PROYECTO -->
    @RenderSection("Scripts", required: false)
</body>
</html>